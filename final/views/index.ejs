<!DOCTYPE html>
<html>
<head>
    <title>Главная</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            text-align: center;
            padding: 50px;
        }
        h1 {
            color: #333;
        }
        a {
            text-decoration: none;
        }
        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 10px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Добро пожаловать!</h1>
    <a href="/login"><button>Логин</button></a>
    <a href="/register"><button>Регистрация</button></a>
    <% if (typeof user !== 'undefined' && user.isAdmin) { %>
        <a href="/admin"><button>Админ</button></a>
    <% } %>
    <a href="/user"><button>Пользователь</button></a>
</body>
</html>
